@import "nib"
@import "normalize.styl"
@import "fonts.styl"
/*animacion(parametro)/*Mixins*/
	//-webkit-animation parametro
	//-moz-animation parametro
	//-o-animation parametro
	//animation parametro
gris_oscuro = #333333
gris_claro = #818181
pink = #cc2f6f
gris_mas_claro= #f3f3f3
a
	text-decoration none
body
	font-family 'Varela Round', sans-serif
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//botones
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
// OOCSS Clases

.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	margin-right .5em
	font-size 1.3em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro 
.actions
	bottom 0
	bottom 0
	left 0
	position absolute
	right 0
	background rgba(black,.3)
.border-bottom
	border-bottom 1px solid gris_claro
.name
	color gris_oscuro
.menu
	display none
.relative
	position relative
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative//se posiciona botones accions con la imagen(figure) padre
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.play
	margin .8em 0//margin de iconos
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute 
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.stado
		background pink
		border-radius 5px
		height 5px
		width 30%
		position relative
		animation 8s stado infinite linear//animacion de elemento                     
	.circle
		background gris_oscuro
		border-radius 100%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite
@keyframes stado
	0%
		width 0%
	100%
		width 100%
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
.header
	height 3.5em
	//a
		//display none
	.title
		font-size 1.1em
		text-align center
		margin 0 
		line-height 3.5em


.song
	display inline-block
	font-size 1rem
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)/*identaci√≥n a song*/
		margin-right 0
	p 
		margin .5em 0
.playing
	&.small
		margin 0 auto
		width 20em
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em
.search
	margin-right 2.3em
	float right
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em

.playlist//no lo llevamos de la v. desktop
	border-left 1px solid gris_claro
	display block
	padding 0 2em	
	width 22em
	display none			
	.list	
		list-style none
	.item	
		padding 1em 0	
	.action	
		font-size .8em		
.isotipo//no lo llevamos de la v. desktop
		width 122px
	.logo
		overflow hidden
		padding 1.3em 0
		background white
		display block
		display none
	.avatar
		width 38px
		height 38px
	.username
		color gris_claro
		position relative
		top 9px
		margin-left .5em
		&:after
			border-left 7px solid transparent
			border-right 7px solid  transparent
			border-top 8px solid gris_claro
			content ""
			display inline-block
			margin-left .5em	

/*----@media screen Tablet---*/
@media screen and (min-width:480px)
	
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	
	.playing
		&.medium
			width auto
/*----@media screen laptop---*/
@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
			padding-top 2em
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro

	.music
		width 32.5em
		float left
		.description
				display none
	
	.header
		height auto
		border-bottom none
		.title
			display none
	.logo
	.playlist
		display block
	
	




	
